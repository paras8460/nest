<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_change_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ldainteractive.nest.ui.ChangePasswordActivity"
    tools:showIn="@layout/activity_change_password">


    <ImageButton
        android:id="@+id/ib_back"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@drawable/ic_back" />

    <ScrollView
        android:layout_below="@+id/ib_back"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_140sdp"
                android:text="@string/change_password"
                android:textColor="@color/green"
                android:textSize="@dimen/_22sdp" />

            <EditText
                android:id="@+id/et_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/textView3"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/border_rounded_edittext"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:textSize="@dimen/_16sdp" />

            <EditText
                android:id="@+id/et_confirm_new_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_below="@+id/et_new_password"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/_60sdp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/border_rounded_edittext"
                android:ems="10"
                android:gravity="center"
                android:hint="@string/confirm_password"
                android:inputType="textPassword"
                android:textColor="@color/green"
                android:textColorHint="@color/green"
                android:textSize="@dimen/_16sdp" />

            <TextView
                android:id="@+id/txtSubmit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"
                android:layout_alignEnd="@+id/et_confirm_new_password"
                android:layout_alignLeft="@+id/et_confirm_new_password"
                android:layout_alignRight="@+id/et_confirm_new_password"
                android:layout_alignStart="@+id/et_confirm_new_password"
                android:layout_below="@+id/et_confirm_new_password"
                android:layout_marginTop="@dimen/_20sdp"
                android:alpha=".8"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:text="@string/Submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sdp" />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
